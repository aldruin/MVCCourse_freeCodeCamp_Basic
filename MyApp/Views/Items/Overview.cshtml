@model MyApp.Models.Item

@{
    var message = "Hello World!";
    var itemsList = new List<string> { "Item2", "Item3", "Item4" };

    var isLoggedIn = true;
}
<h1>@message</h1>
<p>This is the name of the Item: @Model.Name</p>

<ul>
    @foreach (var item in itemsList)
    {
        <li>@item</li>
    }
</ul>

@if (isLoggedIn)
{
    <p>Welcome back!</p>
}
else
{
    <p>Please log in.</p>
}